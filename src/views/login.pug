extends base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required)  
        input(placeholder="Password", name="password", type="password", required)  
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=b67cbe3fc9b806d15374&allow_signup=false") Continue with github &rarr;
    hr
    div 
            span  Don't have account? 
            a(href="/join") Create one now &rarr;